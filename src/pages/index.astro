---
import MainLayout from '../layouts/MainLayout.astro';
import NavMenu from '../components/NavMenu.astro';
import Footer from '../components/Footer.astro';
import Logo from '../components/Logo.astro';

const pageTitle = 'Nika Churikova - English Tutor';
---

<MainLayout title={pageTitle}>
  <!-- Desktop version -->
  <div class="desktop-container">
    <main class="container">
      <Logo />
      <div class="content">
        <div class="info-section">
          <h1 class="heading">hello, i'm nika</h1>
          <p class="description">
            лингвист-переводчик, преподаватель английского языка для взрослых и
            подростков
          </p>
          <NavMenu />
        </div>
        <div class="image-section">
          <div class="image-container">
            <img
              src="/images/profile.jpg"
              alt="Nika Churikova"
              class="profile-image"
            />
          </div>
        </div>
      </div>
      <Footer />
    </main>
  </div>

  <!-- Mobile version -->
  <div class="mobile-container">
    <main class="container">
      <Logo isMobile={true} />
      <div class="mobile-content">
        <div class="mobile-image-container">
          <img
            src="/images/profile.jpg"
            alt="Nika Churikova"
            class="mobile-profile-image"
          />
        </div>
        <p class="mobile-description">
          лингвист-переводчик, преподаватель английского языка для взрослых и
          подростков
        </p>
        <NavMenu isMobile={true} />
      </div>
      <Footer isMobile={true} />
    </main>
  </div>
</MainLayout>

<style>
  /* Global styles */
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 30px 20px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Desktop styles */
  .desktop-container {
    display: none;
  }

  .content {
    display: flex;
    flex: 1;
    gap: 40px;
  }

  .info-section {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .heading {
    font-size: 86px;
    font-weight: 400;
    text-transform: uppercase;
    line-height: 1;
    letter-spacing: -2px;
    margin-bottom: 24px;
  }

  .description {
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    margin-bottom: 40px;
    max-width: 450px;
  }

  .image-section {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-container {
    width: 100%;
    max-width: 400px;
    aspect-ratio: 2 / 3;
    overflow: hidden;
    position: relative;
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Mobile styles */
  .mobile-container {
    display: none;
  }

  .mobile-content {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .mobile-image-container {
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    position: relative;
    margin-bottom: 15px;
  }

  .mobile-profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .mobile-description {
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    line-height: 1.2;
    margin-bottom: 20px;
  }

  /* Media Queries */
  @media (min-width: 769px) {
    .desktop-container {
      display: block;
    }
  }

  @media (max-width: 768px) {
    .mobile-container {
      display: block;
    }

    .container {
      padding: 20px 15px;
    }
  }
</style>
