---
// NavMenu.astro
const items = [
  { name: 'about me', color: 'var(--pink)' },
  { name: 'classes', color: 'var(--yellow)' },
  { name: 'schedule and booking', color: 'var(--blue)' },
  { name: 'faq', color: 'var(--red)' },
];

interface Props {
  isMobile?: boolean;
}

const { isMobile = false } = Astro.props;
---

{
  isMobile ? (
    <div class="mobile-menu">
      <div class="mobile-menu-row">
        <div class="menu-item" style={`background-color: ${items[0].color}`}>
          <span class="menu-text">{items[0].name.split(' ')[0]}</span>
        </div>
        <div class="menu-item" style={`background-color: ${items[1].color}`}>
          <span class="menu-text">{items[1].name}</span>
        </div>
      </div>
      <div class="mobile-menu-row">
        <div class="menu-item" style={`background-color: ${items[3].color}`}>
          <span class="menu-text">{items[3].name}</span>
        </div>
        <div class="menu-item" style={`background-color: ${items[2].color}`}>
          <span class="menu-text">booking</span>
        </div>
      </div>
    </div>
  ) : (
    <nav class="desktop-menu">
      {items.map((item) => (
        <div class="menu-item" style={`background-color: ${item.color}`}>
          <span class="menu-text">{item.name}</span>
        </div>
      ))}
    </nav>
  )
}

<style>
  .desktop-menu {
    display: flex;
    gap: 16px;
    width: 100%;
    margin-top: 20px;
  }

  .mobile-menu {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 20px 0;
  }

  .mobile-menu-row {
    display: flex;
    width: 100%;
    gap: 10px;
  }

  .menu-item {
    flex: 1;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .menu-item:hover {
    transform: translateY(-2px);
  }

  .menu-text {
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    text-align: center;
  }

  @media (max-width: 768px) {
    .menu-text {
      font-size: 12px;
    }

    .menu-item {
      height: 32px;
    }
  }
</style>
